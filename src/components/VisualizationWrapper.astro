---
interface Props {
  title: string;
  subtitle?: string;
  source?: string;
  id?: string;
}

const { 
  title, 
  subtitle = "", 
  source = "https://defis.data.gouv.fr/defis/tourisme-en-train",
  id = ""
} = Astro.props;
---

<div class="visualization-container card" id={id}>
  <div class="visualization-header">
    <h3>{title}</h3>
    {subtitle && <p class="text-secondary">{subtitle}</p>}
  </div>
  
  <div class="visualization-content">
    <slot />
  </div>
  
  <div class="visualization-footer">
    <p class="text-light">
      Source : <a href={source} target="_blank" rel="noopener noreferrer">{source}</a>
    </p>
  </div>
</div>

<style>
  .visualization-container {
    margin-bottom: 3rem;
  }

  .visualization-header {
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 2px solid var(--color-border);
  }

  .visualization-header h3 {
    font-size: clamp(1.5rem, 3vw, 2rem);
    margin-bottom: 0.5rem;
    color: var(--color-text-primary);
  }

  .text-secondary {
    color: var(--color-text-secondary);
    font-size: 1rem;
    line-height: 1.6;
  }

  .visualization-content {
    margin: 2rem 0;
  }

  .visualization-footer {
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-border);
  }

  .text-light {
    color: var(--color-text-light);
    font-size: 0.875rem;
  }

  .text-light a {
    color: var(--color-primary);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .text-light a:hover {
    color: var(--color-secondary);
    text-decoration: underline;
  }
</style>

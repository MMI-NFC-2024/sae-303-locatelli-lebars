</Layout>

<style>
  /* Header & Navigation */
  .header {
    position: sticky;
    top: 0;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid var(--color-border);
    z-index: 1000;
    padding: 1rem 0;
  }

  .nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .logo-text {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: 1.25rem;
    color: var(--color-text-primary);
  }

  .nav-links {
    display: flex;
    list-style: none;
    gap: 2rem;
  }

  .nav-links a {
    font-weight: 600;
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: color 0.3s ease;
    font-size: 0.95rem;
  }

  .nav-links a:hover {
    color: var(--color-primary);
  }

  /* Hero Section */
  .hero {
    position: relative;
    padding: 8rem 0 6rem;
    overflow: hidden;
  }

  .hero-content {
    position: relative;
    z-index: 10;
    max-width: 900px;
  }

  .hero-title {
    margin: 1.5rem 0 1rem;
  }

  .hero-subtitle {
    font-size: clamp(1.25rem, 2vw, 1.75rem);
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: 1rem;
  }

  .hero-description {
    font-size: 1.25rem;
    color: var(--color-text-secondary);
    max-width: 700px;
    margin-bottom: 2.5rem;
  }

  .hero-cta {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-bottom: 4rem;
  }

  .stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    padding: 2rem 0;
    border-top: 2px solid var(--color-border);
  }

  .stat-item {
    text-align: left;
  }

  .stat-number {
    font-family: var(--font-heading);
    font-size: 2.5rem;
    font-weight: 800;
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1;
    margin-bottom: 0.5rem;
  }

  .stat-label {
    font-size: 0.875rem;
    color: var(--color-text-light);
    font-weight: 500;
  }

  .hero-shape {
    position: absolute;
    top: -50%;
    right: -20%;
    width: 800px;
    height: 800px;
    background: linear-gradient(135deg, rgba(0, 102, 204, 0.05), rgba(0, 168, 89, 0.05));
    border-radius: 50%;
    z-index: 0;
  }

  /* Sections */
  .section {
    padding: var(--spacing-section) 0;
  }

  .section-header {
    text-align: center;
    max-width: 700px;
    margin: 0 auto 4rem;
  }

  .section-header h2 {
    margin-bottom: 1rem;
  }

  .section-header p {
    font-size: 1.25rem;
  }

  .section-context {
    background: var(--color-surface);
  }

  /* Context Grid */
  .context-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .context-card {
    text-align: center;
  }

  .card-icon {
    width: 64px;
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 16px;
    margin: 0 auto 1.5rem;
  }

  .context-card h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }

  .context-card p {
    font-size: 1rem;
  }

  /* Visualizations */
  .visualization-container {
    margin-bottom: 3rem;
  }

  .visualization-header {
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 2px solid var(--color-border);
  }

  .visualization-header h3 {
    margin-bottom: 0.5rem;
  }

  .text-secondary {
    color: var(--color-text-secondary);
    font-size: 1rem;
  }

  .text-light {
    color: var(--color-text-light);
    font-size: 0.875rem;
  }

  .visualization-footer {
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-border);
  }

  .visualizations-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    margin-top: 3rem;
  }

  .viz-placeholder {
    text-align: center;
    padding: 3rem 2rem;
    background: linear-gradient(135deg, rgba(0, 102, 204, 0.02), rgba(0, 168, 89, 0.02));
    border: 2px dashed var(--color-border);
  }

  .viz-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .viz-placeholder h4 {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
  }

  .viz-placeholder p {
    font-size: 0.95rem;
  }

  /* Footer */
  .footer {
    background: var(--color-text-primary);
    color: white;
    padding: 4rem 0 2rem;
    margin-top: var(--spacing-section);
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3rem;
    margin-bottom: 3rem;
  }

  .footer-section h4 {
    color: white;
    font-size: 1.25rem;
    margin-bottom: 1rem;
  }

  .footer-section p {
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.95rem;
  }

  .footer-section ul {
    list-style: none;
  }

  .footer-section ul li {
    margin-bottom: 0.5rem;
  }

  .footer-section ul a {
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer-section ul a:hover {
    color: var(--color-primary-light);
  }

  .footer-bottom {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer-bottom p {
    color: rgba(255, 255, 255, 0.5);
    font-size: 0.875rem;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .nav-links {
      display: none;
    }

    .hero {
      padding: 4rem 0 3rem;
    }

    .hero-cta {
      flex-direction: column;
    }

    .btn {
      width: 100%;
      justify-content: center;
    }

    .stats {
      gap: 1.5rem;
    }

    .stat-number {
      font-size: 2rem;
    }
  }
</style>

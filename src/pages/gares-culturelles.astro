---
import Layout from "../layouts/Layout.astro";
import CarteGaresEnrichies from "../components/CarteGaresEnrichies.astro";
---

<Layout currentPage="/gares-culturelles">

  <!-- Breadcrumb -->
  <div class="breadcrumb">
    <div class="container">
      <a href="/">Accueil</a> / <span>Gares culturelles</span>
    </div>
  </div>

  <!-- Hero Section -->
  <section class="hero-page">
    <div class="container">
      <h1>Gares culturelles de Nouvelle-Aquitaine</h1>
      <p class="lead">Découvrez comment le réseau ferré donne accès au patrimoine culturel régional</p>
    </div>
  </section>

  <!-- Visualisation -->
  <section class="section">
    <div class="container">
      <CarteGaresEnrichies />
    </div>
  </section>
</Layout>

<style>
  .header {
    position: sticky;
    top: 0;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid var(--color-border);
    z-index: 1000;
    padding: 1rem 0;
  }

  .nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo a {
    display: flex;
    align-items: center;
    gap: 1rem;
    text-decoration: none;
  }

  .logo-text {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: 1.25rem;
    color: var(--color-text-primary);
  }

  .nav-links {
    display: flex;
    list-style: none;
    gap: 1.5rem;
  }

  .nav-links a {
    font-weight: 600;
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: color 0.3s ease;
    font-size: 0.9rem;
    padding: 0.5rem 0;
    border-bottom: 2px solid transparent;
  }

  .nav-links a:hover,
  .nav-links a.active {
    color: var(--color-primary);
    border-bottom-color: var(--color-primary);
  }

  .breadcrumb {
    background: var(--color-surface);
    padding: 1rem 0;
    font-size: 0.9rem;
  }

  .breadcrumb a {
    color: var(--color-primary);
    text-decoration: none;
  }

  .breadcrumb a:hover {
    text-decoration: underline;
  }

  .hero-page {
    background: linear-gradient(135deg, rgba(0, 102, 204, 0.05), rgba(0, 168, 89, 0.05));
    padding: 4rem 0;
    text-align: center;
  }

  .hero-page h1 {
    font-size: clamp(2rem, 5vw, 3rem);
    margin-bottom: 1rem;
    color: var(--color-text-primary);
  }

  .lead {
    font-size: 1.25rem;
    color: var(--color-text-secondary);
    max-width: 700px;
    margin: 0 auto;
  }

  .section {
    padding: var(--spacing-section) 0;
  }

  @media (max-width: 768px) {
    .nav-links {
      display: none;
    }
  }
</style>
